<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/tvFilterHeader"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Select Case Type"
        android:textSize="20sp"
        android:textColor="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/tvFilterHeader"
        app:layout_constraintBottom_toTopOf="@id/rbCPLaw"
        android:background="#a9a9a9"
        />

    <RadioButton
        android:id="@+id/rbCPLaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Consumer Protection Law"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvFilterHeader"
        android:layout_marginTop="15dp"
        />

    <RadioButton
        android:id="@+id/rbBLaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Banking Regulation"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbCPLaw"
        android:layout_marginTop="10dp"
        />

    <RadioButton
        android:id="@+id/rbILaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insurance Law"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbBLaw"
        android:layout_marginTop="10dp"
        />

    <RadioButton
        android:id="@+id/rbDRLaw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Debt Recovery"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbILaw"
        android:layout_marginTop="10dp"
        />

    <RadioButton
        android:id="@+id/rbRERA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="RERA"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbDRLaw"
        android:layout_marginTop="10dp"
        />

    <RadioButton
        android:id="@+id/rbOther"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Other"
        android:textSize="18sp"
        android:buttonTint="@color/systemBlue"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rbRERA"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
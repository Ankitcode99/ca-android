<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CaseDetails">

    <TextView
        android:id="@+id/btnBackCaseDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="20sp"
        android:textColor="#5896d6"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="10dp"
        android:drawableLeft="@drawable/ic_baseline_arrow_back_ios_24"/>

    <TextView
        android:id="@+id/tvCaseDetailRecipient"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Recipient Name"
        android:textColor="#000"
        android:textStyle="bold"
        android:textSize="30sp"
        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/btnBackCaseDetail"
        app:layout_constraintStart_toStartOf="@id/btnBackCaseDetail"
        />

    <ScrollView
        android:id="@+id/svAppDetails"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailRecipient"
        android:layout_marginTop="25dp"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/cvAppDetails"
                android:layout_width="match_parent"
                app:cardCornerRadius="20dp"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/tvCaseDetailLocation"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:text="Sample Text"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#a9a9a9"
                        android:layout_marginRight="2dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailLocation"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailLocation"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailLocation"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#a9a9a9"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailLocation"
                        app:layout_constraintBottom_toTopOf="@id/tvInsLocation"
                        />

                    <TextView
                        android:id="@+id/tvCaseDetailCaseType"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailLocation"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:text="Sample Text"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#a9a9a9"
                        android:layout_marginRight="2dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailCaseType"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailCaseType"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailCaseType"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#a9a9a9"
                        android:layout_marginRight="10dp"
                        android:layout_marginLeft="10dp"
                        app:layout_constraintTop_toBottomOf="@id/tvInsLocation"
                        app:layout_constraintBottom_toTopOf="@id/tvCaseDetailCaseAgainst"
                        />

                    <TextView
                        android:id="@+id/tvCaseDetailCaseAgainst"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailCaseType"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:text="Sample Text"
                        android:textColor="#000"
                        android:textSize="16sp"
                        />

                    <View
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:background="#a9a9a9"
                        android:layout_marginRight="2dp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailCaseAgainst"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailCaseAgainst"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailCaseAgainst"
                        />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#a9a9a9"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        app:layout_constraintBottom_toTopOf="@id/tvCaseDetailPurpose"
                        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailCaseAgainst"
                        />



                    <TextView
                        android:id="@+id/tvCaseDetailPurpose"
                        android:layout_width="220dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tvCaseDetailCaseAgainst"
                        android:layout_marginTop="15dp"
                        android:layout_marginRight="5dp"
                        android:padding="5dp"
                        android:text="Sample Text"
                        android:textColor="#000"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        android:layout_marginBottom="20dp"
                        />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="1dp"
                        android:layout_height="0dp"
                        android:layout_marginRight="2dp"
                        android:background="#a9a9a9"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailPurpose"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailPurpose"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailPurpose" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailLocation"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailLocation"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailLocation"
                        />

                    <TextView
                        android:id="@+id/tvInsLocation"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Case\nType"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailCaseType"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailCaseType"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailCaseType"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Case\nAgainst"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailCaseAgainst"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailCaseAgainst"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailCaseAgainst"
                        />



                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Case\nOverview"
                        android:gravity="center_horizontal"
                        android:textSize="15sp"
                        app:layout_constraintBottom_toBottomOf="@id/tvCaseDetailPurpose"
                        app:layout_constraintEnd_toStartOf="@id/tvCaseDetailPurpose"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="@id/tvCaseDetailPurpose" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.cardview.widget.CardView>


            <Button
                android:id="@+id/btnAppDetail1Next"
                android:layout_width="0dp"
                android:background="@drawable/btn_bg"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:padding="15dp"
                android:text="Accept Case"
                android:textColor="#FFF"
                android:textSize="18sp"
                app:backgroundTint="@color/systemViolet"
                app:cornerRadius="30dp"
                android:layout_marginBottom="20dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/cvAppDetails"
                app:layout_constraintStart_toStartOf="@+id/cvAppDetails"
                app:layout_constraintTop_toBottomOf="@+id/cvAppDetails"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
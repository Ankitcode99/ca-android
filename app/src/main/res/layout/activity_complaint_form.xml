<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#ffffff"
    android:layout_height="match_parent"
    tools:context=".ComplaintForm">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:popupTheme="@style/Theme.AppCompat.Light"
        app:title="Consumer Adda"
        app:titleTextColor="@color/gradStart" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="74dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="32dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="75dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:text="E-Mail"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="76dp"
        android:layout_height="38dp"
        android:layout_marginTop="25dp"
        android:text="Case Against*"
        app:layout_constraintStart_toStartOf="@+id/textView17"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Select Type"
        android:text="Case Type*"
        app:layout_constraintStart_toStartOf="@+id/textView18"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

    <TextView
        android:id="@+id/textView20"
        android:layout_width="97dp"
        android:layout_height="38dp"
        android:layout_marginTop="30dp"
        android:text="Brief Description*"
        app:layout_constraintStart_toStartOf="@+id/textView19"
        app:layout_constraintTop_toBottomOf="@+id/textView19" />

    <TextView
        android:id="@+id/textView21"
        android:layout_width="93dp"
        android:layout_height="54dp"
        android:layout_marginTop="88dp"
        android:text="Money Involved"
        app:layout_constraintStart_toStartOf="@+id/textView20"
        app:layout_constraintTop_toBottomOf="@+id/textView20" />

    <TextView
        android:id="@+id/textView22"
        android:layout_width="219dp"
        android:layout_height="53dp"
        android:layout_marginTop="12dp"
        android:fontFamily="sans-serif-light"
        android:text="Attachments* (images only)        (min. 1/max. 5) (Small sized images are recommended)"
        app:layout_constraintStart_toStartOf="@+id/textView21"
        app:layout_constraintTop_toBottomOf="@+id/textView21" />

    <Button
        android:id="@+id/img_btn1"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"

        android:paddingBottom="5dp"
        android:text="+"
        android:textAlignment="gravity"
        android:textSize="30dp"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <ImageView
        android:layout_width="46dp"
        android:gravity="center"
        android:layout_height="46dp"
        android:src="@mipmap/green"
        android:paddingTop="4dp"
        android:id="@+id/img_btn11"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toStartOf="@+id/textView22"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
    />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="83dp"
        android:layout_height="35dp"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="15dp"
        android:text="Phone Number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn1" />

    <Button
        android:id="@+id/img_btn2"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/img_btn1"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />
    <ImageView
        android:layout_width="46dp"
        android:gravity="center"
        android:layout_height="46dp"
        android:src="@mipmap/green"
        android:paddingTop="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_btn22"
        app:layout_constraintStart_toEndOf="@+id/img_btn1"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        />

    <Button
        android:id="@+id/img_btn3"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/img_btn2"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <ImageView
        android:layout_width="46dp"
        android:gravity="center"
        android:layout_height="46dp"
        android:src="@mipmap/green"
        android:paddingTop="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_btn33"
        app:layout_constraintStart_toEndOf="@+id/img_btn2"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        />

    <Button
        android:id="@+id/img_btn4"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/img_btn3"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <ImageView
        android:layout_width="46dp"
        android:gravity="center"
        android:layout_height="46dp"
        android:src="@mipmap/green"
        android:paddingTop="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_btn44"
        app:layout_constraintStart_toEndOf="@+id/img_btn3"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        />

    <Button
        android:id="@+id/img_btn5"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_bg"
        android:paddingBottom="5dp"
        android:text="+"
        android:textSize="30dp"
        app:layout_constraintStart_toEndOf="@+id/img_btn4"
        app:layout_constraintTop_toBottomOf="@+id/textView22" />

    <ImageView
        android:layout_width="46dp"
        android:gravity="center"
        android:layout_height="46dp"
        android:src="@mipmap/green"
        android:paddingTop="4dp"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="20dp"
        android:id="@+id/img_btn55"
        app:layout_constraintStart_toEndOf="@+id/img_btn4"
        app:layout_constraintTop_toBottomOf="@+id/textView22"
        />

    <EditText
        android:id="@+id/case_name"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="26dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_bg"
        android:editable="false"
        android:ems="10"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:inputType="none"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar" />

    <EditText
        android:id="@+id/case_email"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_bg"
        android:editable="false"
        android:ems="10"
        android:inputType="none"
        android:paddingLeft="10dp"
        android:clickable="false"
        android:cursorVisible="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/case_name"
        app:layout_constraintTop_toBottomOf="@+id/case_name" />

    <EditText
        android:id="@+id/case_against"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:inputType="textPersonName"
        android:paddingLeft="10dp"

        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/case_email"
        app:layout_constraintTop_toBottomOf="@+id/case_email" />

    <Spinner
        android:id="@+id/case_type"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:paddingLeft="10dp"
        android:spinnerMode="dropdown"

        app:layout_constraintEnd_toEndOf="@+id/case_against"
        app:layout_constraintTop_toBottomOf="@+id/case_against" />

    <EditText
        android:id="@+id/case_desc"
        android:layout_width="240dp"
        android:layout_height="96dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/spinner_bg"
        android:ems="10"
        android:gravity="start|top"
        android:hint="(max 100 words)"
        android:inputType="textMultiLine"
        android:paddingLeft="5dp"
        android:paddingTop="2dp"
        android:paddingRight="5dp"
        android:paddingBottom="2dp"

        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/case_type"
        app:layout_constraintTop_toBottomOf="@+id/case_type" />

    <EditText
        android:id="@+id/case_money"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="29dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:hint="(enter 0 if no money involved)"
        android:inputType="number"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="@+id/case_desc"
        app:layout_constraintTop_toBottomOf="@+id/case_desc" />

    <EditText
        android:id="@+id/case_phno"
        android:layout_width="240dp"
        android:layout_height="38dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/et_bg"
        android:ems="10"
        android:hint="(Optional)"

        android:inputType="phone"
        android:paddingLeft="10dp"
        android:textColor="@color/black"
        android:textCursorDrawable="@color/cursor"
        android:textSize="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_btn5" />

    <Button
        android:id="@+id/final_btn"
        android:layout_width="151dp"
        android:layout_height="37dp"
        android:layout_marginStart="120dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_bg"
        android:gravity="center|center_vertical"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        android:text="Submit Case"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/case_phno" />

</androidx.constraintlayout.widget.ConstraintLayout>